{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "comma-dangle": [
      "warn", 
      "only-multiline",
      {
        "functions": "ignore"
      }
    ],
    "indent": ["warn", 2],
    "semi": ["warn", "always"]
  }
}
